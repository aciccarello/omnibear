{
  "manifest_version": 2,
  "name": "Omnibear",
  "version": "0.1",
  "permissions": [
     "contextMenus",
     "tabs",
     "http://omnibear.com/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["main.js"]
  }
}
